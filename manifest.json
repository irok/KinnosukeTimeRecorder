{
  // Required
  "manifest_version": 2,
  "name": "色之助(勤之助タイムレコーダー)",
  "version": "1.1.6",

  // Recommended
  "description": "勤之助のタイムレコーダーを押す",
  "icons": {
    "16":  "/images/icon19.png",
    "48":  "/images/icon48.png",
    "128": "/images/icon128.png"
  },

  // Pick one (or none)
  "browser_action": {
    "default_icon": "/images/icon19.png",
    "default_title": "勤之助",
    "default_popup": "/html/popup.html"
  },

  // Optional
  "author": "irok",
  "background": {
    // Recommended
    "scripts": [
      "/js/lib/jquery.min.js",
      "/js/lib/aes.js",
      "/js/ktr.js",
      "/js/background.js"
    ],
    "persistent": true
  },
  "homepage_url": "https://github.com/irok/KinnosukeTimeRecorder",
  "offline_enabled": false,
  "options_page": "/html/options.html",
  "permissions": [
    "https://www.4628.jp/*", "notifications"
  ],
  "update_url": "https://github.com/irok/KinnosukeTimeRecorder/raw/master/updates.xml"
}
